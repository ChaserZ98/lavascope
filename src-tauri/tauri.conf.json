{
    "productName": "Vultr Firewall Watcher",
    "version": "0.1.0",
    "identifier": "com.vultr-firewall-watcher-client.app",
    "build": {
        "beforeDevCommand": "bun run dev --host",
        "devUrl": "http://127.0.0.1:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "windows": {
            "wix": {
                "language": ["en-US", "zh-CN"]
            },
            "nsis": {
                "displayLanguageSelector": true,
                "installMode": "both",
                "languages": ["English", "SimpChinese"]
            }
        },
        "active": true,
        "targets": "all",
        "longDescription": "Vultr Firewall Watcher is a desktop application that helps you monitor your Vultr firewall rules.",
        "publisher": "Feiyu Zheng",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "copyright": "Copyright (c) 2024 Feiyu Zheng. All rights reserved.\n\nThis work is licensed under the terms of the MIT license.\nFor a copy, see <https://opensource.org/licenses/MIT>.",
        "category": "Utility",
        "shortDescription": "Vultr Firewall Watcher Client"
    },
    "app": {
        "windows": [
            {
                "title": "Vultr Firewall Watcher",
                "width": 1280,
                "height": 720,
                "fullscreen": false,
                "resizable": true,
                "decorations": false,
                "transparent": true,
                "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msEdgeFluentOverlayScrollbar,msOverlayScrollbarWinStyle"
            }
        ],
        "security": {
            "csp": null
        }
    }
}
