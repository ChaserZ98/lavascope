{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Vultr Firewall Watcher",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "notification": {
                "all": true
            },
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "Vultr Firewall Watcher",
                "width": 1280,
                "height": 720,
                "fullscreen": false,
                "resizable": true,
                "decorations": false
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.vultr-firewall-watcher-client.app",
            "publisher": "Feiyu Zheng",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "copyright": "Copyright (c) 2024 Feiyu Zheng. All rights reserved.\n\nThis work is licensed under the terms of the MIT license.\nFor a copy, see <https://opensource.org/licenses/MIT>.",
            "category": "Utility",
            "shortDescription": "Vultr Firewall Watcher Client",
            "longDescription": "Vultr Firewall Watcher is a desktop application that helps you monitor your Vultr firewall rules."
        },
        "systemTray": {
            "title": "Vultr Firewall Watcher",
            "iconPath": "icons/32x32.png",
            "iconAsTemplate": true
        }
    }
}
