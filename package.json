{
    "name": "lavascope",
    "private": true,
    "version": "0.1.2",
    "type": "module",
    "workspaces": [
        "frontend/apps/*",
        "frontend/libs/*"
    ],
    "scripts": {
        "dev": "bun run dev:ui",
        "dev:ui": "bun run --cwd frontend/apps/ui dev",
        "build": "tsr generate && tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "generate-routes": "tsr generate",
        "watch-routes": "tsr watch",
        "supported-browsers": "echo \"export default $(browserslist-useragent-regexp --allowHigherVersions);\" > ./src/utils/supportedBrowsers.ts",
        "i18n:extract": "bun run --cwd frontend/libs/i18n extract"
    },
    "catalog": {
        "typescript": "^5.9.2"
    },
    "catalogs": {
        "tailwindcss": {
            "tailwindcss": "^4.1.14",
            "@tailwindcss/vite": "^4.1.14",
            "tailwind-scrollbar": "^4.0.2",
            "clsx": "^2.1.1"
        },
        "heroui": {
            "@heroui/react": "^2.8.5"
        },
        "i18n": {
            "@lingui/vite-plugin": "^5.4.1",
            "@lingui/core": "^5.4.1",
            "@lingui/detect-locale": "^5.4.1",
            "@lingui/react": "^5.4.1",
            "@lingui/cli": "^5.4.1",
            "vite-plugin-babel-macros": "^1.0.6"
        },
        "react": {
            "react": "^18.3.1",
            "react-dom": "^18.3.1",
            "@types/react": "^18.3.18",
            "@types/react-dom": "^18.3.5"
        },
        "tauri": {
            "@tauri-apps/api": "^2.8.0",
            "@tauri-apps/plugin-autostart": "^2.5.0",
            "@tauri-apps/plugin-clipboard-manager": "^2.3.0",
            "@tauri-apps/plugin-http": "^2.5.2",
            "@tauri-apps/plugin-log": "^2.7.0",
            "@tauri-apps/plugin-notification": "^2.3.1",
            "@tauri-apps/plugin-os": "^2.3.1",
            "@tauri-apps/plugin-shell": "^2.3.1",
            "@tauri-apps/cli": "^2.8.4"
        },
        "vite": {
            "vite": "^7.1.9",
            "vite-tsconfig-paths": "^5.1.4",
            "@vitejs/plugin-legacy": "^6.0.1",
            "@vitejs/plugin-react": "^4.3.4"
        },
        "eslint": {
            "eslint": "^9.20.0",
            "@eslint/js": "^9.20.0",
            "@stylistic/eslint-plugin": "^4.2.0",
            "@tanstack/eslint-plugin-query": "^5.67.2",
            "eslint-plugin-lingui": "^0.10.0",
            "typescript-eslint": "^8.23.0",
            "eslint-plugin-react": "^7.37.4",
            "eslint-plugin-simple-import-sort": "^12.1.1",
            "eslint-plugin-unused-imports": "^4.1.4"
        },
        "jotai": {
            "jotai": "^2.11.3",
            "jotai-devtools": "^0.10.1"
        }
    },
    "devDependencies": {
        "typescript": "catalog:",
        "eslint": "catalog:eslint",
        "typescript-eslint": "catalog:eslint",
        "@eslint/js": "catalog:eslint",
        "@stylistic/eslint-plugin": "catalog:eslint",
        "eslint-plugin-react": "catalog:eslint",
        "eslint-plugin-simple-import-sort": "catalog:eslint",
        "eslint-plugin-unused-imports": "catalog:eslint",
        "globals": "^15.14.0"
    }
}
